<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.SettingsWindow">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackLayout Orientation="Vertical" Grid.Row="1">
                <Label HorizontalOptions="Center" FontAttributes="Bold" Text="Autologin when app starts"/>
                <Switch x:Name="autoLoginSwitch" IsToggled="{Binding IsAutologinEnabled}" Margin="10, 0, 0, 0" HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>